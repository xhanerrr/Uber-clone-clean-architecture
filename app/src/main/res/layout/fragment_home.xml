<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.main.HomeFragment"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tv_app_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Ride app"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_app_home_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="#EDEBEB"
                    android:clickable="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_where_to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/searchsvgicon"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:clickable="true"
                        android:text="Where to?"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/view_later_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view_later_divider"
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:background="#666"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_later_card"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btn_later_card"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="30dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@android:color/transparent">

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="6dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@android:color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Later"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_suggestions_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/card_search_input">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Suggestions"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/btn_see_all_suggestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:clickable="true"
                    android:text="See all"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_suggestion_items"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/layout_suggestions_header">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_suggestion_ride"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#EDEBEB"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:contentDescription="Book comfort"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ridepic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:text="Ride"
                        android:textColor="@color/black"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_suggestion_tuk"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#EDEBEB"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/card_suggestion_reserve"
                    app:layout_constraintStart_toEndOf="@+id/card_suggestion_ride"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tukpic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:text="Ride"
                        android:textColor="@color/black" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_suggestion_reserve"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#EDEBEB"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/card_suggestion_send"
                    app:layout_constraintStart_toEndOf="@id/card_suggestion_tuk"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/reservepic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:text="Ride"
                        android:textColor="@color/black" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_suggestion_send"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#EDEBEB"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sendpic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="10dp"
                        android:text="Ride"
                        android:textColor="@color/black" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <HorizontalScrollView
                android:id="@+id/hsv_banner_comfort"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:scrollbars="none"
                android:fillViewport="false"
                app:layout_constraintTop_toBottomOf="@+id/layout_suggestion_items">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/banner1"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:contentDescription="Book Comfort Ride Banner"
                        android:scaleType="fitXY"
                        android:src="@drawable/bookcomfortpng" />

                    <ImageView
                        android:id="@+id/banner2"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/uberxlpic" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/uberblackpic"/>

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/reserveuberpic" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/sendpackpic" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ridewithuber" />


                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:id="@+id/tv_more_ways_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="More ways to use Uber"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hsv_banner_comfort" />

            <HorizontalScrollView
                android:id="@+id/hsv_send_package"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_more_ways_header"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center_vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_send_package1"
                            android:layout_width="260dp"
                            android:layout_height="160dp"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageButton
                                android:id="@+id/btn_send_package_image1"
                                android:layout_width="260dp"
                                android:layout_height="160dp"
                                android:background="@null"
                                android:contentDescription="Send a package preview"
                                android:scaleType="center"
                                android:src="@drawable/goluxury" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_send_package_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Go in luxury"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_send_package1" />

                        <TextView
                            android:id="@+id/tv_send_package_desc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elevated service, high-end cars"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_send_package_title1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_send_package2"
                            android:layout_width="260dp"
                            android:layout_height="160dp"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageButton
                                android:id="@+id/btn_send_package_image2"
                                android:layout_width="260dp"
                                android:layout_height="160dp"
                                android:background="@null"
                                android:scaleType="center"
                                android:src="@drawable/previewpic"
                                android:contentDescription="Send a package preview" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_send_package_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Send a package"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_send_package2" />

                        <TextView
                            android:id="@+id/tv_send_package_desc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="On-demand delivery across town"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_send_package_title2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_send_package3"
                            android:layout_width="260dp"
                            android:layout_height="160dp"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageButton
                                android:id="@+id/btn_send_package_image3"
                                android:layout_width="260dp"
                                android:layout_height="160dp"
                                android:background="@null"
                                android:scaleType="center"
                                android:src="@drawable/choosecomfort"
                                android:contentDescription="Send a package preview" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_send_package_title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Choose comfort"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_send_package3" />

                        <TextView
                            android:id="@+id/tv_send_package_desc3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top-rated drivers, newer cars"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_send_package_title3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_send_package4"
                            android:layout_width="260dp"
                            android:layout_height="160dp"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageButton
                                android:id="@+id/btn_send_package_image4"
                                android:layout_width="260dp"
                                android:layout_height="160dp"
                                android:background="@null"
                                android:scaleType="center"
                                android:src="@drawable/toolkit"
                                android:contentDescription="Send a package preview" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_send_package_title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Safety Toolkit"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_send_package4" />

                        <TextView
                            android:id="@+id/tv_send_package_desc4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="On-trip help with safety issues"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_send_package_title4" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/tv_reserve_ahead_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="Reserve Ahead"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hsv_send_package" />

            <HorizontalScrollView
                android:id="@+id/hsv_fly_with_ease"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_reserve_ahead_header">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:clickable="true">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_fly_with_ease"
                        android:layout_width="260dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                            android:id="@+id/btn_fly_with_ease_image"
                            android:layout_width="260dp"
                            android:layout_height="160dp"
                            android:background="@null"
                            android:scaleType="center"
                            android:src="@drawable/previewpic"
                            android:contentDescription="Fly with ease preview" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_fly_with_ease_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Fly with ease"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_fly_with_ease" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book airport rides 90 days ahead"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_fly_with_ease_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_save_trip_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="Save yourself a trip"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hsv_fly_with_ease" />

            <HorizontalScrollView
                android:id="@+id/hsv_send_items_safely"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_save_trip_header">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:clickable="true">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_send_items_safely"
                        android:layout_width="260dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                            android:id="@+id/btn_send_items_safely_image"
                            android:layout_width="260dp"
                            android:layout_height="160dp"
                            android:background="@null"
                            android:scaleType="center"
                            android:src="@drawable/previewpic"
                            android:contentDescription="Send items safely preview" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_send_items_safely_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Send items safely"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_send_items_safely" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send, track and get notified"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_send_items_safely_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

