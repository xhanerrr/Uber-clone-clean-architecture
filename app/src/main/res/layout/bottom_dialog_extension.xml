<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="32dp"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
    android:id="@+id/cardViewHandle"
    android:layout_width="50dp"
    android:layout_height="5dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="2dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTxtFromBDE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="From"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:maxLines="1"
        android:lines="1"
        android:drawableStart="@drawable/searchsvgicon"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewHandle" />

    <EditText
        android:id="@+id/editTxtToBDE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="To"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:maxLines="1"
        android:lines="1"
        android:drawableStart="@drawable/searchsvgicon"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTxtFromBDE" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:text="Elegir en el mapa"
        android:textColor="@color/design_default_color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtToBDE" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBottomDialog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatButton"
        tools:listitem="@layout/item_address_suggestion"/>

</androidx.constraintlayout.widget.ConstraintLayout>